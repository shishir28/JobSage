{
    "configurations": [
        {
            "name": "Launch JobSage.API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build JobSage.API",
            "program": "${workspaceFolder}/frontend/JobSage.Api/bin/Debug/net9.0/JobSage.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/frontend/JobSage.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (http://\\S+)"
            },
            "env": {},
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch JobSage.UI",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build JobSage.UI",
            "program": "${workspaceFolder}/frontend/JobSage.UI/bin/Debug/net9.0/JobSage.UI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/frontend/JobSage.UI",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (http://\\S+)"
            },
            "env": {},
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Python: Backend Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/backend/.env",
        }
    ],
    "compounds": [
        {
            "name": "Launch JobSage API and UI",
            "configurations": [
                "Launch JobSage.API",
                "Launch JobSage.UI"
            ]
        }
    ]
}